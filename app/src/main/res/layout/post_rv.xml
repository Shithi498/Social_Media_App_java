<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/view2"
        android:layout_width="398dp"
        android:layout_height="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/FollowImg"
        android:layout_width="87dp"
        android:layout_height="74dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_bright"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Circular"
        app:srcCompat="@drawable/spidy2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp" />

    <!--<View
        android:id="@+id/view"
        android:layout_width="81dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/FollowImg" />-->

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Shithi Roy"
        android:textColor="#050505"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/FollowImg"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/more"
        android:layout_width="75dp"
        android:layout_height="78dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/more" />

    <TextView
        android:id="@+id/postDes"
        android:layout_width="403dp"
        android:layout_height="78dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <!--<View
        android:id="@+id/view5"
        android:layout_width="417dp"
        android:layout_height="294dp"
        android:layout_marginBottom="264dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postDes"
        app:layout_constraintVertical_bias="1.0" />-->

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/post"
        android:layout_width="409dp"
        android:layout_height="233dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/postDes"
        app:shapeAppearanceOverlay="@style/roundimageview"
        app:srcCompat="@drawable/man_post"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/save"
        android:layout_width="41dp"
        android:layout_height="31dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/post"
        app:srcCompat="@drawable/save" />

    <ImageView
        android:id="@+id/like"
        android:layout_width="66dp"
        android:layout_height="44dp"
        android:layout_marginStart="4dp"
        android:paddingStart="1dp"
        android:paddingEnd="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post"
        app:srcCompat="@drawable/like" />


    <TextView
        android:id="@+id/likeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="4dp"
        android:text="500"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/like"
        app:layout_constraintTop_toBottomOf="@+id/post" />

    <ImageView
        android:id="@+id/comment"
        android:layout_width="58dp"
        android:layout_height="41dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toStartOf="@+id/commenttxt"
        app:layout_constraintTop_toBottomOf="@+id/post"
        app:srcCompat="@drawable/comment" />

    <TextView
        android:id="@+id/commenttxt"
        android:layout_width="35dp"
        android:layout_height="29dp"
        android:layout_marginTop="5dp"
        android:text="500"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post" />


</androidx.constraintlayout.widget.ConstraintLayout>
