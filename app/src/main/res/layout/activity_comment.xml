<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommentActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="400dp"
        android:layout_height="642dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="501dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="383dp"
                android:layout_height="226dp"
                android:layout_marginBottom="407dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/man_post"
                tools:ignore="MissingConstraints" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/FollowImg"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                android:background="@android:color/holo_blue_bright"
                android:backgroundTint="@android:color/holo_blue_bright"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:shapeAppearanceOverlay="@style/Circular"
                app:srcCompat="@drawable/spidy2"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/name1"
                android:layout_width="86dp"
                android:layout_height="20dp"
                android:background="@drawable/right_round_shape"
                android:fontFamily="@font/acme"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="@+id/FollowImg"
                app:layout_constraintStart_toEndOf="@+id/FollowImg"
                app:layout_constraintTop_toTopOf="@+id/FollowImg"
                app:layout_constraintVertical_bias="0.596" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="377dp"
                android:layout_height="61dp"
                android:layout_marginStart="111dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="228dp"
                android:layout_marginBottom="341dp"
                android:text="TextView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.321"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <ImageView
                android:id="@+id/like"
                android:layout_width="66dp"
                android:layout_height="44dp"
                android:layout_marginBottom="297dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                app:srcCompat="@drawable/like"
                tools:ignore="MissingConstraints" />

            <!-- post_rv.xml -->


            <TextView
                android:id="@+id/likeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="310dp"
                android:text="500"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/like"
                app:layout_constraintTop_toTopOf="@+id/like" />

            <ImageView
                android:id="@+id/comment"
                android:layout_width="58dp"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="300dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/likeText"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                app:srcCompat="@drawable/comment" />


            <TextView
                android:id="@+id/commenttxt"
                android:layout_width="35dp"
                android:layout_height="29dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="310dp"
                android:text="500"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/comment"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />

            <ImageView
                android:id="@+id/share"
                android:layout_width="38dp"
                android:layout_height="35dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="306dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/commenttxt"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                app:srcCompat="@drawable/share" />

            <TextView
                android:id="@+id/sharetxt"
                android:layout_width="37dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="313dp"
                android:text="500"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/share"
                app:layout_constraintTop_toBottomOf="@+id/textView18" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cmntRv"
                android:layout_width="387dp"
                android:layout_height="269dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.551"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/comment" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <EditText
        android:id="@+id/commentBody"
        android:layout_width="343dp"
        android:layout_height="52dp"
        android:ems="10"
        android:hint="Write a comment"
        android:inputType="text"
        android:linksClickable="true"
        android:maxLines="5"
        app:layout_constraintBottom_toBottomOf="@+id/view13"
        app:layout_constraintStart_toStartOf="@+id/view13"
        app:layout_constraintTop_toTopOf="@+id/view13" />

    <ImageView
        android:id="@+id/commentSend"
        android:layout_width="26dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view13"
        app:layout_constraintTop_toTopOf="@+id/commentBody"
        app:srcCompat="@drawable/send" />

    <View
        android:id="@+id/view13"
        android:layout_width="400dp"
        android:layout_height="67dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>